<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="00001_init_table_client" author="artem-tkach">
        <preConditions  onFail="MARK_RAN">
            <not>
                <tableExists tableName="client"/>
            </not>
        </preConditions>
        <comment>Table client exists</comment>

        <createTable tableName="client">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="e-mail" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="00002_init_table_brand" author="artem-tkach">
        <preConditions  onFail="MARK_RAN">
            <not>
                <tableExists tableName="brand"/>
            </not>
        </preConditions>

        <createTable tableName="brand">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="00003_init_table_model" author="artem-tkach">
        <preConditions  onFail="MARK_RAN">
            <not>
                <tableExists tableName="model"/>
            </not>
        </preConditions>

        <createTable tableName="model">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="brand_id" type="bigint" >
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="00004_table_client_rename_column_email" author="artem-tkach">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="client" columnName="email"/>
            </not>
        </preConditions>
        <renameColumn columnDataType="varchar(255)"
                      newColumnName="email"
                      oldColumnName="e-mail"
                      remarks="Renamed column email"
                      schemaName="mobile_accounting"
                      tableName="client"/>
    </changeSet>

    <changeSet id="00005_create_table_user" author="artem-tkach">
        <preConditions  onFail="MARK_RAN">
            <not>
                <tableExists tableName="user"/>
            </not>
        </preConditions>

        <createTable tableName="user">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="email" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="phone" type="varchar(255)"/>
            <column name="password" type="varchar(255)"/>
            <column name="role" type="int"/>
        </createTable>
    </changeSet>

    <changeSet id="00006_create_table_order" author="artem-tkach">
        <preConditions  onFail="MARK_RAN">
            <not>
                <tableExists tableName="order"/>
            </not>
        </preConditions>

        <createTable tableName="order">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="client_id" type="bigint" >
                <constraints nullable="false"/>
            </column>
            <column name="model_id" type="bigint" >
                <constraints nullable="false"/>
            </column>
            <column name="serial_number" type="varchar(255)"/>
            <column name="defect" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="manager_id" type="bigint" >
                <constraints nullable="false" foreignKeyName="fk_manager_user" references="user(id)"/>
            </column>
            <column name="date" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>

    <changeSet id="00007_create_table_order_status" author="artem-tkach">
        <preConditions  onFail="MARK_RAN">
            <not>
                <tableExists tableName="order_status"/>
            </not>
        </preConditions>
        <createTable tableName="order_status">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="order_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>
</databaseChangeLog>