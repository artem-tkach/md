<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">


    <changeSet id="00004_table_client_rename_column_email" author="artem-tkach">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="client" columnName="email"/>
            </not>
        </preConditions>
        <renameColumn columnDataType="varchar(255)"
                      newColumnName="email"
                      oldColumnName="e-mail"
                      remarks="Renamed column email"
                      schemaName="mobile_accounting"
                      tableName="client"/>
    </changeSet>

</databaseChangeLog>