<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="00011_add_table_delivery" author="artem-tkach">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="delivery"/>
            </not>
        </preConditions>

        <createTable tableName="delivery">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="date" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="order_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="manager_id" type="bigint" >
                <constraints nullable="false" foreignKeyName="fk_delivery_manager_user" references="user(id)"/>
            </column>
            <column name="sum" type="double"/>
            <column name="guid" type="varchar(68)">
                <constraints unique="true" nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>