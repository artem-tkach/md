<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="00009_add_table_repair" author="artem-tkach">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="repair"/>
            </not>
        </preConditions>

        <createTable tableName="repair">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="date" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="order_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="master_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="result" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="sum" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="comment" type="text"/>
        </createTable>
    </changeSet>
</databaseChangeLog>