<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="00003_add_table_residues" author="artem-tkach">
        <preConditions  onFail="MARK_RAN">
            <not>
                <tableExists tableName="component_residues"/>
            </not>
        </preConditions>

        <createTable tableName="component_residues">
            <column name="id" type="bigint" >
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="component_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="count" type="double">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>