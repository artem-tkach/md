<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="00008_add_fk_toComponent_residues" author="artem-tkach">
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists foreignKeyName="fk_residues_component"
                                            foreignKeyTableName="component_residues"/>
            </not>
        </preConditions>
        <addForeignKeyConstraint baseColumnNames="component_id"
                                 baseTableName="component_residues"
                                 constraintName="fk_residues_component"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="component"/>
    </changeSet>
</databaseChangeLog>